{
  "compilerOptions": {
    "outDir": "../../../assets/public",

    // enable latest features
    "lib": ["esnext","dom"],
    "module": "esnext",
    "target": "esnext",
    "allowJs": true, // allow importing `.js` from `.ts`

    // best practices
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"]
}
